<MudDrawer @bind-Open="@open" Width="100px" Fixed="true" 
           ClipMode="DrawerClipMode.Docked"
           Anchor="Anchor.Start" 
           Elevation="0"
           Variant="@DrawerVariant.Mini"
           Class="">
            <MudDrawerHeader>
                <MudText Typo="Typo.h6"></MudText>
            </MudDrawerHeader>
            <MudNavMenu Color="Color.Primary" Style="margin: auto;">
                <MudNavLink Match="NavLinkMatch.All" Icon="@Icons.Material.Outlined.Home"></MudNavLink>
                <MudNavLink Match="NavLinkMatch.All" Icon="@Icons.Material.Outlined.MenuBook"></MudNavLink>
                <MudNavLink Match="NavLinkMatch.All" Icon="@Icons.Material.Outlined.Bookmark"></MudNavLink>
            </MudNavMenu>
        </MudDrawer>
@code
{ 
    bool open = true;

    void ToggleDrawer()
    {
        open = !open;
    } 
}